{
  "env": {
    "es2020": true,
    "node": true
  },
  "extends": [
    "airbnb-base",
    "plugin:import/errors",
    "plugin:import/warnings",
    "prettier",
    "plugin:prettier/recommended",
    "eslint-config-prettier"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": ["import", "prettier"],
  "rules": {
    "prettier/prettier": "error",
    "import/prefer-default-export": "off"
  },
  "settings": {
    "import/resolver": {
      "alias": [
        ["@config", "./src/config"],
        ["@database", "./src/database"],
        ["@graphql", "./src/graphql"],
        ["@utils", "./src/utils"]
      ]
    }
  }
}
